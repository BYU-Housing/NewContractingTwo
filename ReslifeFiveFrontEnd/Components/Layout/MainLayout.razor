@inherits LayoutComponentBase
<link href="_content/BlazorBootstrap/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
<script src="_content/BlazorBootstrap/js/bootstrap/bootstrap.bundle.min.js"></script>

<div class="page d-flex flex-column vh-100">
    <!-- Navbar as Ribbon at the Top -->
        <div class="container-fluid">
            <NavMenu />
        </div>


    <!-- Main Content Area -->
    <main class="flex-grow-1 d-flex flex-column justify-content-center align-items-center">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
